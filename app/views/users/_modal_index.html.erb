<h1>Listing users</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <!--<th>Password digest</th>-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <!--<td><%= user.password_digest %></td>-->
    <td><%= link_to('Show', user, :class => "modalLink", :remote => true) %></td>
    <td><%= link_to('Edit', edit_user_path(user), :class => "modalLink", :remote => true ) %></td>
    <td><%= link_to('Destroy', user, :class => "modalLink", :remote => true, method: :delete, data: { confirm: "ユーザ#{@user.name}を削除しますか？" }) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New User', new_user_path, :class => "modalLink", :remote => true) %>